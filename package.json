{
    "name": "secure-chat",
    "version": "0.0.1",
    "engines": {
        "node": "12.2"
    },
    "scripts": {
        "start-client": "cd frontend && node scripts/start.js",
        "build": "(cd frontend && npm install && node scripts/build.js) && (cd ../backend && yarn install)",
        "test": "cd frontend && node scripts/test.js",
        "start": "ts-node backend/src/index.ts",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install npm && run build"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}